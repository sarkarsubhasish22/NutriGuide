<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#051ea6" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/up_bar"/>
    <LinearLayout android:orientation="vertical" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
        <ImageView android:id="@+id/home_image" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="10dp" android:scaleType="fitXY" android:layout_weight="@android:integer/config_longAnimTime" app:srcCompat="@drawable/homepage"/>
        <Button android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textStyle="normal|bold|italic" android:id="@+id/nutritional_information" android:background="#00bcd4" android:paddingLeft="-10dp" android:paddingTop="20dp" android:paddingRight="-10dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="Nutritional Information" android:onClick="nutriInformation" android:fontFamily="serif" android:autoSizeTextType="1" android:paddingHorizontal="-10dp" android:paddingVertical="20dp" android:textFontWeight="1000" app:backgroundTint="#f715d400"/>
        <Button android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textStyle="normal|bold|italic" android:id="@+id/evaluate_nutritional_status" android:background="@color/teal_200" android:paddingLeft="-10dp" android:paddingTop="20dp" android:paddingRight="-10dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="Evaluate Nutritional Status" android:onClick="evaluateNutritionalStatus" android:fontFamily="serif" android:autoSizeTextType="1" android:paddingHorizontal="-10dp" android:paddingVertical="20dp" android:textFontWeight="1000" app:backgroundTint="#f715d400"/>
    </LinearLayout>
    <include layout="@layout/bottom_bar"/>
</LinearLayout>
