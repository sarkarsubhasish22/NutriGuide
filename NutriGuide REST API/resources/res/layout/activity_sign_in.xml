<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_horizontal" android:orientation="vertical" android:background="#d3051ea6" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/up_bar"/>
    <LinearLayout android:layout_gravity="top" android:orientation="vertical" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
        <com.google.android.material.textfield.TextInputLayout android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content">
            <EditText android:textColor="@color/black" android:id="@+id/enterEmail" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Enter Email" android:ems="10" android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
            <EditText android:textColor="@color/black" android:id="@+id/enterPassword" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Enter Password" android:ems="10" android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button android:layout_gravity="center" android:id="@+id/log_in" android:layout_width="150dp" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="Log In" android:onClick="userLogIn" app:cornerRadius="10dp" app:strokeColor="#ffffff"/>
        <TextView android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:id="@+id/logInConfirmation" android:layout_width="match_parent" android:layout_height="wrap_content" android:text=""/>
    </LinearLayout>
    <include layout="@layout/bottom_bar"/>
</LinearLayout>
